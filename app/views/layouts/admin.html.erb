<!DOCTYPE html>
<html>
<head>
  <title>KnewMark 后台</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render "common/navbar" %>
    <%= render "common/flashes" %>
    <div class="row">
      <div class="col-md-2">
        <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
          <li> <%= link_to("Subjects", admin_subjects_path) %> </li>
          <li> <%= link_to("所有产品", admin_knowledges_path) %> </li>
          <li> <%= link_to("待审核产品", admin_knowledges_path(:status => "by_hidden")) %> </li>
          <li> <%= link_to("已上线产品", admin_knowledges_path(:status => "by_published")) %> </li>
        </ul>
      </div>
      <div class="col-md-10">
        <%= yield %>
      </div>
    </div>
    <%= render "common/footer" %>

  </div>
</body>
</html>
